# Podfile for Flutter project

platform :ios, '14.0'

use_frameworks! :linkage => :static
use_modular_headers!

install! 'cocoapods', :disable_input_output_paths => true

flutter_application_path = File.expand_path('..', __dir__)
dependencies_file = File.join(flutter_application_path, '.flutter-plugins-dependencies')
eval(File.read(dependencies_file)) if File.exist?(dependencies_file)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_application_path = File.expand_path('..', __dir__)
  plugins_file = File.join(flutter_application_path, '.flutter-plugins')
  eval(File.read(plugins_file)) if File.exist?(plugins_file)

  # Firebase pods â€“ let Flutter handle them
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
