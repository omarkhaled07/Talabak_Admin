# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics
# For more information, see: https://guides.cocoapods.org/syntax/podfile.html#install
install! 'cocoapods', :disable_input_output_paths => true

# This is the standard Flutter Podfile structure. It includes the Flutter module
# and all its plugins automatically.
flutter_application_path = File.expand_path('../', File.dirname(__FILE__ ))
load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb')

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Pods for Flutter plugins
  flutter_additional_ios_build_settings(self)

  # Add any other pods your project specifically needs here, e.g.:
  # pod 'GoogleMaps'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
